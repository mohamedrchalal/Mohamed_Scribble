<h2>New Post</h2>

<%= form_for @post do |f| %>
  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <br>
  <%= f.label :content %>
  <br>
  <%= f.text_area :content %>
  <br>
  <br>
  <%= f.label :user_name %>
  <br>
  <%= f.text_field :user_name %>
  <br>
  <br>
  <%= f.submit %>
<% end %>
